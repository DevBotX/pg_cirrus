# hosts.yml
# This file contains Ansible inventory configuration for PostgreSQL servers

# PostgreSQL primary server host and connection details
PG_PRIMARY_HOST ansible_host=xxx.xxx.xxx.xxx ansible_connection=ssh ansible_user=postgres ansible_become_pass=xxxxxxxx

# PostgreSQL standby 1 server host and connection details
PG_SB1_HOST ansible_host=xxx.xxx.xxx.xxx ansible_connection=ssh ansible_user=postgres ansible_become_pass=xxxxxxxx

# PostgreSQL standby 2 server host and connection details
PG_SB2_HOST ansible_host=xxx.xxx.xxx.xxx ansible_connection=ssh ansible_user=postgres ansible_become_pass=xxxxxxxx

# Inventory group for primary server. NOTE: In future we will not be using PG_PRIMARY_GROUPS instead we will use a single PG_PRIMARY_HOST
[PG_PRIMARY_GROUP]
PG_PRIMARY_HOST

# Inventory group for standby servers
[PG_SB_GROUP]
PG_SB1_HOST
PG_SB2_HOST
